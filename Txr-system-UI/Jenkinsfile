

pipeline {
    agent {
        docker {
            image 'node:10.16-alpine' 
            args '-p 3000:3000' 
        }
    }
    environment {
        HOME = '.'
    }
    stages {
        stage('build') { 
                steps {
                    dir("Txr-system-UI") {
                        sh 'npm install' 
                    }
                }
            }
        }
}