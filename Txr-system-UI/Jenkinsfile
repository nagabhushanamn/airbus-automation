

pipeline {
    
    agent {
        docker {
            image 'node:10.16-alpine' 
            args '-p 3000:3000' 
        }
    }
    
    git 'https://github.com/nagabhushanamn/airbus-automation'
    
    dir("Txr-system-UI") {
        stages {
            stage('build') { 
                steps {
                    sh 'npm install' 
                }
            }
        }
    }
}