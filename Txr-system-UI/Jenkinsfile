

pipeline {
    agent {
        docker {
            image 'node:10.16-alpine' 
            args '-p 3000:3000' 
        }
    }
    stages {
        stage('build') { 
            steps{
                dir("Txr-system-UI") {
                    steps {
                        sh 'npm install' 
                    }
                }
            }
        }
    }
    
}